<script src="/public/scripts/validation.js"></script>
<form action="/auth/register" method="post" onsubmit="return checkPass();">
   <h4 class="center-align bold">Register</h4>
   <div class="row">
      <div class="input-field col s12 m4 offset-m4">
         <label>Email</label>
         <span id="email_error" class="email_error" style="color: red;"></span>
         <input class="validate" type="text" name="email" required id="email">
      </div>
   </div>
   <div class="row">
      <div class="input-field col s12 m4 offset-m4">
         <label>Username</label>
         <input class="validate" type="text" name="username" required id="">
      </div>
   </div>
   <div class="row">
      <div class="input-field col s12 m4 offset-m4">
         <label>Password</label>
         <input class="validate" type="password" name="password" required id="password">
      </div>
   </div>
   <div class="row">
      <div class="input-field col s12 m4 offset-m4">
         <label>Retype Password</label>
         <span id="retype_error" class="retype_error" style="color: red;"></span>
         <input class="validate" type="password" name="retype" required id="retype">
      </div>
   </div>
   <div></div>
   <div class="row">
      <div class="col s12 m4 offset-m4 center-align">
         <label>
            <input type="checkbox" name="terms_of_service" required>
            <span>I agree to the <a href="/terms_of_service_page" target="_blank">Terms of Service</a></span>
         </label>
      </div>
   </div>
   <div class="row">
      <div class="col s12 m4 offset-m4 center-align">
         <input class="btn" type="submit" value="Register">
      </div>
   </div>
</form>

