<h1>Product List</h1>
<div class="row">
   <form class="col m5" action="/product/search" method="post">
      <input class="form-control" type="search" name="keyword"
      placeholder="Search by article name" required>
   </form>
</div>
<table class="table table-primary">
   <tr>
      <th>Article name</th>
      <th>Article description</th>
      <th>Article image</th>
      <th>Article category</th>
   </tr>
   {{#each productList }}
   <tr>
      <td>{{ name }}</td>
      <td>${{ description }}</td>
      <td>
         <img src="/images/{{ image }}" width="100" height="100">
      </td>
      <td>{{ category.name }}</td>
   </tr>
   {{/each}}
</table>